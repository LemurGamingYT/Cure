func conjecture(int num) -> int {
    steps = 0
    x = num
    while x > 1 {
        if x % 2 == 0 {
            x /= 2
        } else {
            x = (3 * x) + 1 // 3x + 1
        }

        steps += 1
    }

    return steps
}

func main() -> int {
    i = 0
    while i < 10 {
        print($"Collatz conjecture for {i}: {conjecture(i)}")
        i += 1
    }

    return 0
}
